<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context="app.test.xyz.HomeActivity">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="-10sp"
            app:cardBackgroundColor="@color/app_color"
            app:cardCornerRadius="@dimen/_20ssp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_minus4sdp"
            android:layout_marginEnd="@dimen/_minus4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/menu"
                android:layout_marginTop="@dimen/_5sdp"
                android:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="FFF4X VIP PRO TOOL"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp" />

        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/nativebody"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#6547CA"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/white"
                    app:strokeWidth="@dimen/_2sdp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/native_ad_layout"/>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/nativeads"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#6547CA"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/nativebody"
                    app:strokeColor="@color/white"
                    app:strokeWidth="@dimen/_2sdp">
                    <ImageView
                        android:id="@+id/bannerAd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>


                </com.google.android.material.card.MaterialCardView>


                <ImageView
                    android:id="@+id/iv_sensi_rush"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/sense_rush"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/nativeads" />

                <ImageView
                    android:id="@+id/iv_sight_craft"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/sight_craft"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_sensi_rush" />

                <ImageView
                    android:id="@+id/iv_speed_spike"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/speed_spike"
                    app:layout_constraintTop_toBottomOf="@id/iv_sight_craft" />
                <ImageView
                    android:id="@+id/iv_vortex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/vortex_vision"
                    app:layout_constraintTop_toBottomOf="@id/iv_speed_spike" />
                <ImageView
                    android:id="@+id/iv_headshot"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/headshot_horizon"
                    app:layout_constraintTop_toBottomOf="@id/iv_vortex" />
                <ImageView
                    android:id="@+id/iv_lock_master"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/lock_master_pro"
                    app:layout_constraintTop_toBottomOf="@id/iv_headshot" />
                <ImageView
                    android:id="@+id/iv_ultra_reder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/ultra_reder"
                    app:layout_constraintTop_toBottomOf="@id/iv_lock_master" />

                <ImageView
                    android:id="@+id/iv_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/privacyicon"
                    app:layout_constraintTop_toBottomOf="@id/iv_ultra_reder" />
                <ImageView
                    android:id="@+id/iv_rateus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/rate"
                    app:layout_constraintTop_toBottomOf="@id/iv_privacy" />
                <ImageView
                    android:id="@+id/iv_shareus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/share"
                    app:layout_constraintTop_toBottomOf="@id/iv_rateus" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>